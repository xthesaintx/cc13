<div class="tree-node {{#if node.isSelected}}selected{{/if}}" data-type="{{node.type}}" data-uuid="{{node.uuid}}" data-sheet-uuid="{{node.uuid}}" {{#if isGM}}data-context="true"{{/if}}>
  <div class="tree-node-header {{#if node.hasChildren}}expandable{{/if}}">
    
    {{#if node.hasChildren}}
      <i class="fas {{#if node.isExpanded}}fa-chevron-down{{else}}fa-chevron-right{{/if}} expand-icon expand-toggle" data-action="expantToggle"></i>
    {{else}}
      <i class="tree-spacer"></i>
    {{/if}}

    <i class="{{node.displayIcon}} node-icon" alt="{{node.name}}">&nbsp;</i>
    <span class="tree-label {{#if node.isClickable}}clickable{{/if}}{{#if (eq node.type 'item')}}clickable{{/if}}" data-type="{{node.type}}" {{#if (eq node.type 'item')}}data-uuid="{{node.uuid}}" data-action="openItem"{{else}}data-sheet-uuid="{{node.uuid}}" data-action="selectSheet"{{/if}} data-name="{{node.name}}" draggable="true" data-drag="true" data-entry-id="{{node.id}}" >
      {{node.name}}
      {{#if node.quests}}&nbsp;<i class="fas fa-scroll node-icon" style="font-size:10px">&nbsp;</i>{{/if}}
    </span>
  </div>
</div>